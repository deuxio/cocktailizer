<div class="container">
  <div class="row">
    <div class="col-xs-8">

      <h1>Listing cocktails</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cocktails.each do |cocktail| %>
            <tr>
              <td><%= link_to cocktail.name, cocktail %></td>
              <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_cocktail_path(cocktail) %></td>
              <td><%= link_to '<i class="fa fa-minus-circle"></i>'.html_safe, cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Cocktail', new_cocktail_path, class: 'btn btn-warning' %>

    </div>
  </div>
</div>
